{
  "manifest_version": 2,

  "name": "Tabs control",
  "description": "Control the tab usage and the number of tabs in a page.",
  "version": "1.0",
  
  "background": {
    "scripts": ["jquery.js", "eventPage.js"]
  },


  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}